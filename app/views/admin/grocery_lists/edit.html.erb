<h1>Edit Grocery List</h1>
<div class="container-fluid">
	<div class="row">
		<div class="col-md-3"></div>
		<div class="col-md-6">
			<h2>Products</h2>
			<%= form_for [:admin, @grocery_lists], :html => { method: :patch } do |f| %>
				<%= f.label(:grocery_list_name, "Grocery list name") %>
			  <%= f.text_area :name, :placeholder => "Edit grocery list.", class: "form-control" %>
			<div class="form-group">
				<%= f.submit "Edit", class: "btn btn-primary" %>
			</div>
			<% end %>
			</div>
		<div class="col-md-3"></div>
	</div>
</div>