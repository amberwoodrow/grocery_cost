<div class="container-fluid">
	<div class="row">
		<div class="col-md-3"></div>
		<div class="col-md-6">
			<h2>New Store</h2>
			<%= form_for [:admin, @grocery_list] do |f| %>
			<div class="form-group">
				<%= f.label :grocery_list, class: "control-label" %>
				<%= f.text_area :body, :placeholder => "Enter a grocery list", class: "form-control" %>
			</div>
			<div class="form-group">
			  <%= f.submit "Create", class: "btn btn-primary" %>
			</div>
			<% end %>
		</div>
		<div class="col-md-3"></div>
	</div>
</div>