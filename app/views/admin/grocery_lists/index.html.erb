<h1>Grocery Lists</h1>
<h3><%= link_to "+ Add new", new_admin_grocery_list_path %></h3>
<table class="table table-striped">
	<tr>
		<th>Grocery List Id</th>
		<th>Grocery List Name</th>
		<th>Edit</th>
		<th>Delete</th>
	</tr>
	<% @grocery_lists.each do |grocery_list| %>
	  <tr>
	    <td><%= grocery_list.id %></td>
	    <td><%= grocery_list.name %></td>
	    <td><%= link_to "Edit", edit_admin_grocery_list_path(:id => grocery_list.id) %></td>
	    <td><%= link_to "Delete", admin_grocery_list_path(:id => grocery_list.id), data: { :confirm => "Are you sure?" }, method: :delete %></td>
	  </tr>
	<% end %>
</table>