<div class="container-fluid">
	<div class="row">
		<div class="col-md-3"></div>
		<div class="col-md-6">
			<h2>Edit User</h2>
				<%= form_for @user, url: admin_user_path(@user.id), :html => { method: :patch } do |f| %>
					<%= label_tag(:user_email, "User email") %>
				  <%= @user.email %>
				<div class="form-group">
					<%= f.check_box(:is_admin) %>
					<%= f.label(:user_is_admin, "User is an Admin") %>
				</div>
				<div class="form-group">
					<%= f.submit "Edit", class: "btn btn-primary" %>
				</div>
				<% end %>
			</div>
		<div class="col-md-3"></div>
	</div>
</div>