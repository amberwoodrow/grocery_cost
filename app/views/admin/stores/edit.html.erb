<h1>Edit Store</h1>
<div class="container-fluid">
	<div class="row">
		<div class="col-md-3"></div>
		<div class="col-md-6">
			<%= form_for [:admin, @store], :html => { method: :patch } do |f| %>
        <div class="form-group">
					<%= f.label :store_name, class: "control-label" %>
					<%= f.text_field :name, :placeholder => "Edit store name", class: "form-control" %>
				  <!-- store address -->
				</div>
				<div class="form-group">
					<%= f.submit "Edit", class: "btn btn-primary" %>
				</div>
			<% end %>
		</div>
		<div class="col-md-3"></div>
	</div>
</div>