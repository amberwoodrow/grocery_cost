<h1>Stores</h1>
<h3><%= link_to "+ Add new", new_admin_store_path %></h3>
<table class="table table-striped">
	<tr>
		<th>Store Id</th>
		<th>Store Name</th>
		<th>Edit</th>
		<th>Delete</th>
	</tr>
	<% @stores.each do |store| %>
	  <tr>
	    <td><%= store.id %></td>
	    <td><%= store.name %></td>
	    <td><%= link_to "Edit", edit_admin_store_path(:id => store.id) %></td>
	    <td><%= link_to "Delete", admin_store_path(:id => store.id), data: { :confirm => "Are you sure?" }, method: :delete %></td>
	  </tr>
	<% end %>
</table>