<div class="container-fluid">
	<div class="row">
		<div class="col-md-3"></div>
		<div class="col-md-6">
			<h2>Products</h2>
				<%= form_for [:admin, @products], :html => { method: :patch } do |f| %>
				<div class="form-group">
					<%= f.label :product_name, class: "control-label" %>
				  <%= f.text_field :name, :placeholder => "Edit product name", class: "form-control" %>
				<!-- <div class="form-group">
				  user can vote on product, cannot vote on product
				</div> -->
			  </div>
				<div class="form-group">
					<%= f.submit "Edit", class: "btn btn-primary" %>
				</div>
				<% end %>
			</div>
		<div class="col-md-3"></div>
	</div>
</div>