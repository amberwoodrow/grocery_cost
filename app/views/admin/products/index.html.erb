<h1>Products</h1>
<h3><%= link_to "+ Add new", new_admin_product_path %></h3>
<table class="table table-striped">
	<tr>
		<th>Product Id</th>
		<th>Product Name</th>
		<th>Edit</th>
		<th>Delete</th>
	</tr>
	<% @products.each do |product| %>
	  <tr>
	    <td><%= product.id %></td>
	    <td><%= product.name %></td>
	    <td><%= link_to "Edit", edit_admin_product_path(:id => product.id) %></td>
	    <td><%= link_to "Delete", admin_product_path(:id => product.id), data: { :confirm => "Are you sure?" }, method: :delete %></td>
	  </tr>
	<% end %>
</table>