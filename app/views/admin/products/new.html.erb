<div class="container-fluid">
	<div class="row">
		<div class="col-md-3"></div>
		<div class="col-md-6">
			<h2>New product</h2>
				<%= form_for [:admin, @products] do |f| %>
				  <%= render "shared/validation_messages", :target => @products %>
				<div class="form-group">
					<%= f.label :product_name, class: "control-label" %>
					<%= f.text_field :name, :placeholder => "Enter a product name", class: "form-control" %>
				</div>
				<div class="form-group">
				  <%= f.submit "Create", class: "btn btn-primary" %>
				</div>
				<% end %>
			</div>
		<div class="col-md-3"></div>
	</div>
</div>