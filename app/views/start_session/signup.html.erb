<div class="container-fluid">
	<div class="row">
		<div class="col-md-3"></div>
		<div class="col-md-6">
			<h2>Sign up</h2>
				<%= form_for @user, url: do_signup_path do |f| %>
				  <%= render "shared/error_messages", :target => @user %>
				<div class="form-group">
					<%= f.label :email, class: "control-label" %>
					<%= f.text_field :email, :placeholder => "email@domain.com", class: "form-control" %>
					<%= f.label :email_confirmation, class: "control-label" %>
					<%= f.text_field :email_confirmation, class: "form-control" %>
				</div>
				<div class="form-group">
					<%= f.label :password, class: "control-label" %>
					<%= f.password_field :password, :placeholder => "Enter a password", class: "form-control" %>
					<%= f.label :password_confirmation, class: "control-label" %>
					<%= f.password_field :password_confirmation, class: "form-control" %>
				</div>
				<div class="form-group">
					<%= f.submit "Sign up", class: "btn btn-primary" %>
					<%= link_to "Sign in", signin_path %>
				</div>
				<% end %>
			</div>
		<div class="col-md-3"></div>
	</div>
</div>