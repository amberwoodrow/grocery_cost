<div class="row">
	<div class="col-md-3"></div>
	<div class="col-md-6">
			<h1>Sign in</h1>
	  	<%= form_for @user, url: do_signin_path, method: "post" do |f| %>
			  <div class="form-group">
		  	  <%= render "shared/error_messages", :target => @user %>
					<%= f.label :email, class: "control-label" %>
					<%= f.text_field :email, :placeholder => "email@domain.com", class: "form-control" %>
			  </div>
			  <div class="form-group">
					<%= f.label :password, class: "control-label" %>
					<%= f.password_field :password, :placeholder => "Enter a password", class: "form-control" %>
			  </div>
			  <%= f.submit "Log in", class: "btn btn-primary" %>
			  <%= link_to "Sign up", signup_path %>
			<% end %>
		</div>
	<div class="col-md-3"></div>
</div>